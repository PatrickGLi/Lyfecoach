<div class="row session-page">
  <div class="col-xs-5 col-xs-offset-1">
    <div class="session-logo row">
      <div class="col-xs-8">
        <h1>lyfecoach</h1>
      </div>
      <div class="spinner">
        <div class="dot1"></div>
        <div class="dot2"></div>
      </div>
    </div>

    <h2>log in</h2>

    <form action="<%=session_url%>" method="post">
      <%= auth_token %>

      <div class="form-group">
        <label for="email" class="labels">Email</label>
        <input class="form-control"
               id="email"
               type="text"
               name="user[email]"
               value="<%=@user.email%>"/>
      </div>

      <div class="form-group">
        <label for="password" class="labels">Password</label>
        <input class="form-control"
               id="password"
               type="password"
               name="user[password]"/>
      </div>

      <button class="btn btn-primary sign-in-button" type="submit">Sign In</button>
    </form>

    <br/>
    <div>
      New to Lyfecoach?
      <%= link_to "Sign Up", new_user_url %>
    </div>
    <br/>

    <%= render "/shared/errors" %>

  </div>
</div>
